{
  "name": "coffee-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "seed": "ts-node --project tsconfig.seed.json prisma/seed.ts",
    "snapshot": "concurrently \"npx @prisma/ppg-tunnel --host 127.0.0.1  --port 5432\" \"wait-on tcp:5432 && ./scripts/db-snapshot.sh\"",
    "restore": "concurrently \"npx @prisma/ppg-tunnel --host 127.0.0.1  --port 5432\" \"wait-on tcp:5432 && ./scripts/db-restore.sh\"",
    "db:snapshot": "node --loader ts-node/esm scripts/db-snapshot.ts",
    "db:snapshot:create": "npm run db:snapshot create",
    "db:snapshot:list": "npm run db:snapshot list",
    "db:snapshot:restore": "npm run db:snapshot restore",
    "prisma:safe": "ts-node scripts/prisma-safe.ts",
    "migrate:user-ids": "ts-node --project tsconfig.scripts.json src/scripts/migrate-user-ids.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.3",
    "@prisma/client": "^6.7.0",
    "@vercel/blob": "^1.0.1",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jose": "^6.0.11",
    "lucide-react": "^0.510.0",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.3",
    "react-hot-toast": "^2.5.2",
    "resend": "^4.5.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.6",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "concurrently": "^9.1.2",
    "daisyui": "^5.0.35",
    "eslint": "^9.26.0",
    "eslint-config-next": "15.3.2",
    "prisma": "^6.7.0",
    "tailwindcss": "^4.1.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  }
}
